[user]
	email = YOUR_EMAIL@example.com
	name = Your Name
[credential]
	helper = !/usr/bin/gh auth git-credential
[credential "https://github.com"]
	helper =
	helper = !/usr/bin/gh auth git-credential
[credential "https://gist.github.com"]
	helper =
	helper = !/usr/bin/gh auth git-credential
[core]
	excludesFile = ~/.gitignore
[merge]
	tool = vimdiff
[mergetool]
	prompt = false
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[init]
	defaultBranch = main

# Conditional includes for directory-specific configuration
# Replace ~/WORK_DIR/ with your actual work directory path
[includeIf "gitdir:~/WORK_DIR/"]
	path = ~/.gitconfig.work
